{
  "extends": "../../base.tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "./dist",
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "./dist"
  },
  "include": ["src/", "typings/"],
  "exclude": ["src/**/*.test.ts", "src/**/*.test.tsx", "src/utils/tests/**/*"],
  "ts-node": {
    "moduleTypes": {
      "jest.config.ts": "cjs"
    }
  }
}
